{
    "version": "2.3.0",
    "packages": [
        "packages/*"
    ],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": [
                "ignored-file",
                "*.md"
            ]
        },
        "bootstrap": {
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    }
}
